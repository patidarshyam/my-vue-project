<template>
  <div class="employee-search-modal" v-if="visible">
    <div :class="['modal-container', { 'ipad-mode': isIPad }]">
      <div class="modal-content">
        <div class="modal-header">
          <button class="modal-close" @click="closeModal">Ã—</button>
        </div>
        <EmployeeSearch :lastName="searchCriteria.lastName" :firstName="searchCriteria.firstName" :employeeNumber="searchCriteria.employeeNumber" />

        <div class="modal-footer">
          <button class="btn btn-primary" @click="closeModal">Close</button>
        </div>
      </div>
    </div>
  </div>
</template>

<script>
import EmployeeSearch from './EmployeeSearchPopUp.vue'
export default {
  props: {
    visible: Boolean, // Prop to control the visibility of the modal
    searchCriteria: Object
  },
  components: {
    EmployeeSearch
  },
  computed: {
    isIPad() {
      // Check if the device is an iPad based on screen size
      return window.innerWidth <= 1024;
    }
  },
  methods: {
    closeModal() {
      this.$emit('close')
    },
  }
}
</script>

