=========nav bar========
<template>
  <!-- Navigation bar code... -->
  <nav ref="header" class="navbar text-white navbar-expand-lg navbar-light bg-primary sticky-top p-0" style="--bs-primary-rgb: 54, 85, 179">
    <!-- Navigation bar content... -->
  </nav>

  <div class="d-flex overflow-auto" :class="{ 'mini-variant': !isShow, 'expand-view': isShow, loader: loader }" style="--bs-gutter-x: 0; height: calc(100vh - 3.9rem)">
    <div class="side-nav" ref="menu" :class="{ 'collapsed': !isShow }">
      <button class="toggle-btn" @click="toggleSideNav">
        <i :class="isShow ? 'fa fa-angle-double-left' : 'fa fa-angle-double-right'"></i>
      </button>
      <!-- Side navigation content... -->
    </div>
    <!-- Rest of the code... -->
  </div>
</template>

<script>
import { ref } from 'vue';

export default {
  // Component code...
  setup() {
    const isShow = ref(true);

    const toggleSideNav = () => {
      isShow.value = !isShow.value;
    };

    return {
      isShow,
      toggleSideNav,
    };
  },
};
</script>

<style>
/* Basic styling for the side navigation */
.side-nav {
  /* Add any common styles here... */
}

/* Styles for desktop */
@media (min-width: 1024px) {
  .side-nav {
    width: 12rem; /* Adjust width for desktop */
  }
}

/* Styles for tablet */
@media (max-width: 1023px) {
  .side-nav {
    width: 8rem; /* Adjust width for tablet */
  }
}

.collapsed {
  width: 4rem; /* Collapsed width */
}

/* Add any other styles specific to the side navigation here... */

/* Styles for the toggle button */
.toggle-btn {
  position: absolute;
